<Window x:Class="Carshop9000.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carshop9000.UI.Wpf" xmlns:views="clr-namespace:Carshop9000.UI.Wpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Öffnen"/>
                <Separator/>
                <MenuItem Header="Beenden"/>
            </MenuItem>
            <MenuItem Header="Bearbeiten">
                <MenuItem Header="Kopieren"/>
                <MenuItem Header="Löschen"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Height="22" Background="OliveDrab"/>

        <TabControl>
            <TabItem Header="🚗 Cars">
                <views:CarView/>
            </TabItem>
            <TabItem Header="🏢 Manufacturer">

            </TabItem>
            <TabItem Header="📄 Order">

            </TabItem>
            <TabItem Header="🥨 Customers">

            </TabItem>
        </TabControl>

    </DockPanel>
</Window>
